# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Email Configuration (Resend)
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=Fitness App <noreply@yourdomain.com>

# Application URL (for email links)
NEXT_PUBLIC_APP_URL=http://localhost:3069

# Logging Configuration
# Log levels: DEBUG, INFO, WARN, ERROR, NONE
# Client-side logging level (for browser)
NEXT_PUBLIC_LOG_LEVEL=INFO
# Server-side logging level (for Node.js)
LOG_LEVEL=INFO

# Debug Mode Configuration
# Включает детальное логирование для отладки первых пользователей
# Client-side debug mode
NEXT_PUBLIC_DEBUG_MODE=false
# Server-side debug mode
DEBUG_MODE=false

# User Flow Logging
# Включает детальное логирование flow регистрации, авторизации и действий пользователя
# Client-side user flow logging
NEXT_PUBLIC_ENABLE_USER_FLOW_LOGGING=false
# Server-side user flow logging
ENABLE_USER_FLOW_LOGGING=false

# Optional: For production deployments
# NODE_ENV=production
