#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Setup environment for Homebrew tools (macOS)
export GOROOT=/opt/homebrew/opt/go/libexec
export GOPATH=$HOME/src/go
export PATH=/opt/homebrew/bin:/opt/homebrew/opt/go/libexec/bin:$GOPATH/bin:$PATH

# Run pre-commit hooks (configured in .pre-commit-config.yaml)
# Skip npm-based hooks in Kiro environment
SKIP=typescript-check,eslint pre-commit run --all-files
