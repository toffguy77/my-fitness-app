# Production environment file for VPS deployment
# Copy to: ${DEPLOY_PATH}/.env.production
# IMPORTANT: do not commit the real .env.production (secrets) into git.

# App
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://burcev.team

# Optional logging
NEXT_PUBLIC_LOG_LEVEL=INFO
LOG_LEVEL=INFO
NEXT_PUBLIC_DEBUG_MODE=false
DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_USER_FLOW_LOGGING=false
ENABLE_USER_FLOW_LOGGING=false

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Email (Resend)
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=BURCEV <noreply@burcev.team>

# OCR (optional)
NEXT_PUBLIC_OPENROUTER_API_KEY=sk-or-v1-xxxxx

# FatSecret API (optional)
FATSECRET_ENABLED=true
FATSECRET_CLIENT_ID=your_fatsecret_client_id
FATSECRET_CLIENT_SECRET=your_fatsecret_client_secret
FATSECRET_BASE_URL=https://platform.fatsecret.com/rest/server.api
FATSECRET_TIMEOUT=5000
FATSECRET_MAX_RESULTS=20
FATSECRET_FALLBACK_ENABLED=true
