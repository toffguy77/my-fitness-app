# Staging environment file for VPS deployment
# Copy to: ${DEPLOY_PATH}/.env.staging
# IMPORTANT: do not commit the real .env.staging (secrets) into git.

# App
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://beta.burcev.team

# Optional logging
NEXT_PUBLIC_LOG_LEVEL=DEBUG
LOG_LEVEL=DEBUG
NEXT_PUBLIC_DEBUG_MODE=true
DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_USER_FLOW_LOGGING=true
ENABLE_USER_FLOW_LOGGING=true

# Supabase (staging project)
NEXT_PUBLIC_SUPABASE_URL=your_staging_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_staging_supabase_anon_key

# Email (Resend)
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=BURCEV Beta <noreply@burcev.team>

# OCR (optional)
NEXT_PUBLIC_OPENROUTER_API_KEY=sk-or-v1-xxxxx

# FatSecret API (optional)
FATSECRET_ENABLED=true
FATSECRET_CLIENT_ID=your_fatsecret_client_id
FATSECRET_CLIENT_SECRET=your_fatsecret_client_secret
FATSECRET_BASE_URL=https://platform.fatsecret.com/rest/server.api
FATSECRET_TIMEOUT=5000
FATSECRET_MAX_RESULTS=20
FATSECRET_FALLBACK_ENABLED=true
